{
  "variables": {
    "default": "gce-packer",
    "source_image": "ubuntu-minimal-1604-lts",
    "instance": "g1-small",
    "region": "us-east1",
    "zone": "us-east1-b",
    "project_id": "{{env `PROJECT_ID`}}",
    "auth_file": "{{env `GOOGLE_APPLICATION_CREDENTIALS`}}",
    "description": "ubuntu 16.04 ansible master image",
    "target_image_name": "ubuntu-16-ansible-master"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "machine_type": "{{user `instance`}}",
      "source_image_family": "{{user `source_image`}}",
      "region": "{{user `region`}}",
      "zone": "{{user `zone`}}",
      "image_description": "Packer Image",
      "image_name": "{{user `target_image_name`}}-{{timestamp}}",
      "disk_size": 16,
      "disk_type": "pd-ssd",
      "ssh_username": "root",
      "account_file": "{{ user `auth_file`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 10",
        "uname -a",
        "uptime"
      ]
    },
    {
      "type": "shell",
      "script": "init.sh"
    }
  ]
}
